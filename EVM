void veiw1()
{
 clrscr();
 cout<<"------------------------------------------------------------------------------------------------------------------------\n";
 cout<<"                                                 KEITH RICHARDS CONCERT                                           \n";
 cout<<"------------------------------------------------------------------------------------------------------------------------\n";
 char ch7;
 int cnt1=0;
 int cde1;
 cout<<"\t\t\t\t\t\tEnter Code: ";
 cin>>cde1;
 fstream fo;
 fo.open("people11.dat",ios::app|ios::in|ios::binary);
 while(fo.read((char*)&s1,sizeof(s1)))
 {
  if(cde1==s1.check1())
  {
   cout<<"\t\t\t\t\t\tCustomer Found....\n";
   s1.display1();
   cnt1=1;
  }
 }
 if(cnt1==0)
 cout<<"\t\t\t\t\t\tNo Such Customer Exists";
 getch();
}
