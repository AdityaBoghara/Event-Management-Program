/*****************************************************************************************************************************************************************/

void dele1()
{
 clrscr();
 char ch8;
 int cde1;
 cout<<"------------------------------------------------------------------------------------------------------------------------\n";
 cout<<"                                                 KEITH RICHARDS CONCERT                                           \n";
 cout<<"------------------------------------------------------------------------------------------------------------------------\n";
 char found='n';
 cout<<"\n\n\t\t\t\t\t\tEnter Code: ";
 cin>>cde1;
 fstream fo;
 fo.open("people11.dat",ios::app|ios::in|ios::binary);
 ofstream fout;
 fout.open("temp1.dat",ios::out|ios::binary);
 while(fo.read((char*)&s1,sizeof(s1)))
 {
  if(cde1==s1.check1())
  {
   found='y';
   cout<<"\n\n\t\t\t\t\t\tCustomer Found....\n";
   s1.display1();
   cout<<"\t\t\t\tYou Want to Delete this Account(y/n): ";
   cin>>ch8;
   if(ch8=='N'||ch8=='n')
   {
    fout.write((char*)&s1,sizeof(s1));
   }
  }
  else
  fout.write((char*)&s1,sizeof(s1));
 }
 if(found=='n')
  cout<<"\t\t\tEnter Code Doesnt Match With Any Of Customer\n";
 fo.close();
 fout.close();
 remove("people11.dat");
 rename("temp1.dat","people11.dat");
 clrscr();
 cout<<"------------------------------------------------------------------------------------------------------------------------\n";
 cout<<"                                                 KEITH RICHARDS CONCERT                                           \n";
 cout<<"------------------------------------------------------------------------------------------------------------------------\n";
 cout<<"\t\t\t\tDetails After Deletion Are: \n";
 showdetails1(1,6000);
 getch();
}
